<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

	<!-- General job file for Semantic Vectors, grouplens example -->

<configuration>

	<!--- job properties for corner-hashed -->

	<property>
		<name>lsh.hadoop.LSHDriver.in</name>
		<value>/tmp/lsh_hadoop/GL_points</value>
		<description>Input directory.</description>
	</property>

	<property>
		<name>lsh.hadoop.LSHDriver.out</name>
		<value>/tmp/lsh_hadoop/GL_corners</value>
		<description>Output directory.</description>
	</property>

	<property>
		<name>lsh.hadoop.LSHDriver.mapper</name>
		<value>lsh.hadoop.CornerMapper</value>
		<description>Mapper class.</description>
	</property>

	<property>
		<name>lsh.hadoop.LSHDriver.reducer</name>
		<value>semvec.lsh.UICornerReducer</value>
		<description>Reducer class.</description>
	</property>

	<property>
		<name>lsh.hadoop.LSHDriver.hasher</name>
		<value>lsh.core.OrthonormalHasher</value>
		<description>Hasher class.</description>
	</property>

	<property>
		<name>lsh.hadoop.LSHDriver.gridsize</name>
		<value>0.1</value>
		<description>Hasher grid size array.</description>
	</property>

	<property>
		<name>lsh.hadoop.LSHDriver.minValue</name>
		<value>0.000001</value>
		<description>Minimum input value.</description>
	</property>

	<property>
		<name>lsh.hadoop.LSHDriver.maxValue</name>
		<value>0.95</value>
		<description>Maximum input value.</description>
	</property>

	<property>
		<name>lsh.hadoop.LSHDriver.dimension</name>
		<value>100</value>
		<description># of dimensions.</description>
	</property>

</configuration>

